---
export interface Props {
  title?: string;
}

const { title = "Dashboard" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <style>
      :root {
        --bg: #f3f4f6;
        --card-bg: #ffffff;
        --text: #333;
        --primary: #4f46e5;
        --primary-hover: #4338ca;
      }

      body {
        margin: 0;
        padding: 0;
        background: var(--bg);
        font-family: system-ui, sans-serif;
        color: var(--text);
      }

      header {
        width: 100%;
        padding: 1rem 2rem;
        background: var(--card-bg);
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 10;
      }

      header .logo {
        font-size: 1.25rem;
        font-weight: 700;
      }

      nav a {
        margin-left: 1rem;
        text-decoration: none;
        color: var(--primary);
        font-weight: 500;
      }

      nav a:hover {
        text-decoration: underline;
      }

      main {
        max-width: 500px;
        margin: 2rem auto;
        background: var(--card-bg);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
      }

      button {
        margin-top: 1rem;
        width: 100%;
        padding: 0.75rem;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
      }

      button:hover {
        background: var(--primary-hover);
      }

      input {
        width: 100%;
        padding: 0.6rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        border: 1px solid #d1d5db;
      }

      label {
        font-weight: bold;
        margin-bottom: 0.25rem;
        display: block;
      }

      a {
        color: var(--primary);
      }
    </style>
  </head>

  <body>
    <header>
      <div class="logo">Mi Dashboard</div>

      <nav>
        <a href="/signin">Iniciar sesi√≥n</a>
        <a href="/register">Registrarse</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
