---
export const prerender = false;  // SSR: usamos cookies + redirect
import "../styles/login.css";    // importa el CSS 

const { cookies, redirect } = Astro;

// cookies que maneja /api/auth/signin
const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

// Si ya tiene sesiÃ³n -> redirigir
if (accessToken && refreshToken) {
  return redirect("/Dashboard");
}
---

  <div class="login-wrapper">
    <div class="login-container">
      <div class="login-card">
        <h1 class="login-title">Sign in</h1>
        
        <!-- <p style="text-align:center; margin-bottom: 20px;">
          New here? <a href="/register">Create an account</a>
        </p> -->

        <form class="login-form" action="/api/auth/signin" method="post">
          <label>
            Email
            <input type="email" name="email" required />
          </label>

          <label>
            Password
            <input type="password" name="password" required />
          </label>

          <button type="submit">Login</button>
        </form>
      </div>
    </div>
  </div>


