---
const { label, icon, href } = Astro.props;
---
<a href={href} class="flex items-center justify-between bg-white border px-4 py-3 rounded-lg hover:bg-gray-50 shadow-sm">
  <div class="flex items-center gap-3">
    <img src={icon} class="w-5 h-5" />
    <span>{label}</span>
  </div>
  <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
    <path d="M9 5l7 7-7 7" />
  </svg>
</a>
